# Server Configuration
PORT=3001
NODE_ENV=production
API_URL=https://localhost:3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=dims_user
DB_PASSWORD=secure_password_here
DB_NAME=dims_sr_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key
REFRESH_TOKEN_EXPIRY=30d

# Session Configuration
SESSION_SECRET=your_session_secret_key_min_32_characters
SESSION_EXPIRY=24h
SECURE_COOKIES=true

# Hyperledger Fabric Configuration
FABRIC_CA_URL=http://localhost:7054
FABRIC_CHANNEL_NAME=dims-sr-channel
FABRIC_CHAINCODE_NAME=sim-registry
FABRIC_GATEWAY_DISCOVERY=true

# Security
CORS_ORIGIN=https://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# TLS/SSL Certificates (for HTTPS)
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key
